<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_51sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_margin="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:id="@+id/linear_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"

            >
        <ImageView
            android:id="@+id/iv_contactImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_person_24"
            />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="@dimen/_210sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            >

        <TextView
            android:id="@+id/tv_contactName"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Babar"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:ellipsize="end"
            />
            <LinearLayout
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_20sdp"
                android:orientation="horizontal"
                >

            <TextView
                android:id="@+id/tv_contactPhone"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_10sdp"
                android:text="+923082996353"
                android:textColor="@color/orange"
                android:gravity="center_vertical"
                />

                <ImageView
                    android:id="@+id/iv_contactCall"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_call_24"
                    />

                <ImageView
                    android:id="@+id/iv_contactMessage"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_message_24"
                    />

                    </LinearLayout>

        </LinearLayout>

    </LinearLayout>

        <ImageView
            android:id="@+id/iv_contactPin"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_location_on_24"
            android:padding="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            app:tint="@color/lblue"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>