<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:background="@drawable/contact_header_bg"
        android:id="@+id/chatHeader"
        >

        <ImageView
            android:id="@+id/iv_chatBack"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:padding="@dimen/_10sdp"
            />

        <LinearLayout
            android:layout_toRightOf="@id/iv_chatBack"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/iv_chatCall"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/iv_chatImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_person_24"
                    />
            </androidx.cardview.widget.CardView>

        <TextView

            android:paddingRight="@dimen/_40sdp"
            android:id="@+id/tv_chatHeading"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="match_parent"
            android:text="Chat name"
            android:gravity="center|start"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/_10sdp"
            />

    </LinearLayout>
        <ImageView

            android:id="@+id/iv_chatCall"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_call_24"
            android:padding="@dimen/_9sdp"
            android:layout_alignParentRight="true"
            app:tint="@color/white"
            />
    </RelativeLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chatHeader"
        android:layout_above="@+id/chatTextBox"
        android:id="@+id/chatsSwipeRefresh"
        >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chatHeader"
        android:layout_above="@+id/chatTextBox"
        />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_5sdp"
        android:background="@color/orange"
        android:id="@+id/chatTextBox"
        >
        <EditText
            android:id="@+id/et_chatText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="5"
            android:background="@color/orange"
            android:hint="Text..."
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_40sdp"
            />
        <ImageView
            android:id="@+id/iv_chatSend"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentRight="true"
            app:tint="@color/white"
            android:src="@drawable/ic_baseline_send_24"
            android:padding="@dimen/_4sdp"
            />
    </RelativeLayout>
</RelativeLayout>